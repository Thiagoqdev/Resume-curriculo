# ===== MONGODB =====
# MONGO_URL=mongodb://localhost:27017
# MONGO_DATABASE=skillsync

# ===== AZURE BLOB STORAGE =====
# Configuração antiga (mantida para compatibilidade, mas use AZURE_STORAGE_CONNECTION_STRING)
# AZURE_STORAGE_ACCOUNT=skillsyncstorage
# AZURE_STORAGE_KEY=your-storage-account-key
# AZURE_CONTAINER_NAME=skillsync-files

# String de conexão completa do Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=skillsyncstorage;AccountKey=your-storage-account-key;EndpointSuffix=core.windows.net

# Container name (ainda necessário)
AZURE_CONTAINER_NAME=skillsync-files

# ===== REDIS =====
# REDIS_URL=redis://localhost:6379
# CACHE_EXPIRE_SECONDS=3600

# ===== OPENAI =====
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# ===== EMAIL =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===== LOGGING =====
LOG_LEVEL=INFO

# ===== FILE UPLOAD =====
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=["jpg", "png", "pdf"]

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
